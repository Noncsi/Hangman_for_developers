<div class="row">
    <div class="col-md-6">
        <h4 id="select-letter-title">Select a letter</h4>
        <div id="letters-container"></div>
    </div>
    <div class="col-md-6">
        <div id="hangman-drawing">
            <div id="hanging-tree">
                <div id="tree0"></div><div id="tree1"></div><div id="tree2"></div><div id="tree3"></div><div id="tree4"></div>
            </div>
            <ul id="man">
                <li id="head"></li><li id="body"></li><li id="right-arm"></li><li id="left-arm"></li><li id="right-leg"></li><li id="left-leg"></li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="blank-lines">
        </div>    
    </div>
</div>

<!-- GAME OVER Modal -->
<div id="game-over-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">GAME OVER</h2>
            </div>
            <div class="modal-body">
                <p id="lose-word"></p>
            </div>
            <div class="modal-body">
                <p>New game?</p>
            </div>
            <div class="modal-footer">
                @{string path = HttpContext.Current.Request.Url.AbsolutePath; }
                @{string level = path.Split('/').Last();}
                @Html.ActionLink("Yes", level, "Level", null, new { @class = "modal-button" , id = "yes-btn" })
                @Html.ActionLink("No", "Index", "Home", null, new { @class = "modal-button" , id = "no-btn" })
            </div>
        </div>

    </div>
</div>
<!-- WIN Modal -->
<div id="win-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">YOU WIN</h2>
            </div>
            <div class="modal-body">
                <div id="definition-container"><h4 id="definition"></h4></div>
            </div>
            <div class="modal-body">
                <p>New game?</p>
            </div>
                <div class="modal-footer">
                    @Html.ActionLink("Yes", level, "Level", null, new { @class = "modal-button", id = "yes-btn" })
                    @Html.ActionLink("No", "Index", "Home", null, new { @class = "modal-button", id = "no-btn" })
                </div>
            </div>

    </div>
</div>

<p id="script-for-data" data-word="@ViewBag.Words[0]" data-definition="@ViewBag.Words[1]"></p>
